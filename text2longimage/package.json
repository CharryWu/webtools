{
  "name": "text2longimage",
  "version": "1.0.0",
  "description": "Transform text into beautiful long images perfect for social media posts and mobile reading",
  "main": "text2longimage.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "postinstall": "echo 'text2longimage dependencies installed'",
    "lint": "eslint *.js __tests__/*.js",
    "lint:fix": "eslint *.js __tests__/*.js --fix"
  },
  "keywords": [
    "text-to-image",
    "canvas",
    "web-worker",
    "social-media",
    "image-generation"
  ],
  "author": "CharryWu",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "TextEncoder": true,
      "TextDecoder": true
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!text2longimage.js",
      "!index.html"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npm test -- --passWithNoTests --findRelatedTests"
    ]
  }
}
